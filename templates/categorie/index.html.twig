{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
    <h1>Categories</h1>

    {% if categories is not empty %}
        <table border="1">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                </tr>
            </thead>

            <tbody>
                {% for une_categorie in categories %}
                <tr>
                    <td>
                        <a href="{{ path('ma_categorie', {'id': une_categorie.id})}}"</a>
                    {{ une_categorie.name }}
                    </td>
                    
                    <td>{{ une_categorie.description }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        
    {% else %}
        <p>Il n'y a aucune categorie</p>
    {% endif %}

        <h2>Ajouter une categorie</h2>
        {{ form(form_categorie_add)}}

{% endblock %}
